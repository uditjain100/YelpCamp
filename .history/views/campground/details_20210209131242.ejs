<% layout('../layouts/boilerplate') %>
<div class="row my-5 mx-1">
  <div class="card col-6">
    <img src="<%= camp.img %>" class="card-img-top" alt="..." />
    <div class="card-body">
      <h5 class="card-title"><%= camp.title %></h5>
      <h6 class="card-location" style="font-weight: 900"><%= camp.city %></h6>
      <p class="card-text"><%= camp.description %></p>
      <h6 class="card-price" style="font-weight: 700">
        Price : $<%= camp.price %>
      </h6>
      <a
        href="/campgrounds/<%= camp.id %>/update"
        style="width: 200px"
        class="btn btn-info"
        >Update</a
      >
    </div>
  </div>
  <div class="card col-6">
    <h5 class="display-6 review">Leave a ReviewðŸ˜Š</h5>
    <div class="card">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="1"
        max="5"
        step="1"
        class="form-range"
        id="rating"
      />
      <div class="form-group">
        <label for="review" class="form-label">Review</label>
        <textarea class="form-control" id="review" rows="3"></textarea>
      </div>
    </div>
  </div>
</div>
