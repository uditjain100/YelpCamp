<% layout('../layouts/boilerplate') %>
<div class="row my-5 mx-1">
  <div class="card col-6">
    <img src="<%= camp.img %>" class="card-img-top" alt="..." />
    <div class="card-body">
      <h5 class="card-title"><%= camp.title %></h5>
      <h6 class="card-location" style="font-weight: 900"><%= camp.city %></h6>
      <p class="card-text"><%= camp.description %></p>
      <h6 class="card-price" style="font-weight: 700">
        Price : $<%= camp.price %>
      </h6>
      <a
        href="/campgrounds/<%= camp.id %>/update"
        style="width: 200px"
        class="btn btn-info"
        >Update</a
      >
    </div>
  </div>
  <div class="card col-6 bg-info">
    <h5 class="display-6 review">Leave a ReviewðŸ˜Š</h5>
    <form
      action="/campground/<%= camp.id %>/reviews"
      method="POST"
      class="validated-form m-1"
      novalidate
    >
      <div class="card m-1">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          required
          step="1"
          name="review[rating]"
          class="form-range"
          id="rating"
        />
        <div class="form-group m-1">
          <label for="body" class="form-label">Review</label>
          <textarea
            name="review[body]"
            class="form-control"
            id="body"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">&#10004; Looks Good</div>
        </div>
        <button type="submit" class="btn btn-success my-2">Submit</button>
      </div>
    </form>
    <% for(var review of camp.reviews){ %>
    <div class="card p-2 m-1">
      <div class="row">
        <div class="col-11">
          <h5 class="display-8">Rating : <%= review.rating %></h5>
          <h5 class="display-10">Review : <%= review.body %></h5>
        </div>
        <div
          class="col-1 d-flex"
          style="justify-content: center; align-items: center"
        >
          <button
            class="btn btn-outline-danger me-2"
            style="border-radius: 50%; font-weight: 900"
          >
            X
          </button>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
