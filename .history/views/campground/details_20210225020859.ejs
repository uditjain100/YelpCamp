<% layout('../layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div id="map" style="width: 100%; height: 300px"></div>
<div class="row my-5 mx-1">
  <div class="card col-6" style="border-right: 2px gray solid">
    <div id="campgroundCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% camp.images.forEach((img,i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <img
            src="<%= img.url %>"
            class="d-block w-100"
            style="width: 500px; height: 300px"
            alt=""
          />
        </div>
        <% })%>
      </div>
      <% if (camp.images.length > 1) { %>
      <a
        class="carousel-control-prev"
        type="button"
        data-bs-target="#campgroundCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        type="button"
        data-bs-target="#campgroundCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
      <% } %>
    </div>

    <div class="card-body">
      <h5 class="card-title"><%= camp.title %></h5>
      <h6 class="card-location" style="font-weight: 900">
        <%= camp.location %>
      </h6>
      <figure>
        <blockquote class="blockquote">
          <p><%= camp.description %></p>
        </blockquote>
        <figcaption class="blockquote-footer">
          <cite title="Source Title"><%= camp.author.username %></cite>
        </figcaption>
      </figure>
      <h6 class="card-price" style="font-weight: 700">
        Price (per night) : $<%= camp.price %>
      </h6>
      <% if ( currentUser && camp.author.equals(currentUser._id)) { %>
      <a
        href="/campgrounds/<%= camp.id %>/update"
        style="width: 200px"
        class="btn btn-outline-info rounded-pill mt-4"
        >Update</a
      >
      <% } else { %>
      <a
        style="pointer-events: none; width: 200px"
        href="/campgrounds/<%= camp.id %>/update"
        disabled
        class="btn btn-info rounded-pill"
        >Update</a
      >
      <% } %>
    </div>
  </div>
  <% if (currentUser) { %>
  <div class="card col-6">
    <h5
      class="display-6 review"
      style="
        font-family: Georgia, 'Times New Roman', Times, serif;
        font-weight: 900;
      "
    >
      Leave a ReviewðŸ˜Š
    </h5>
    <form
      action="/campgrounds/<%= camp.id %>/reviews"
      method="POST"
      class="validated-form m-1"
      novalidate
    >
      <label for="rating" class="form-label mb-3">Rating</label>
      <fieldset class="starability-basic">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div class="form-group m-1">
        <label for="body" class="form-label">Review</label>
        <textarea
          name="review[body]"
          class="form-control"
          id="body"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">&#10004; Looks Good</div>
        <button
          type="submit"
          class="btn d-grid col-12 btn-success my-2 mx-auto rounded-pill"
        >
          Submit
        </button>
      </div>
    </form>
    <div class="reviews" style="overflow-y: scroll; height: 300px">
      <% for(var review of camp.reviews){ %>
      <div class="card p-2 m-1">
        <div class="row">
          <div class="col-11">
            <p class="starability-result" data-rating="<%= review.rating %>">
              <%= review.rating %> stars
            </p>
            <h5 class="display-10" style="font-weight: 500; font-size: 25px">
              Review : <%= review.body %>
            </h5>
            <figure>
              <figcaption class="blockquote-footer mt-2">
                <cite title="Source Title"><%= review.author.username %></cite>
              </figcaption>
            </figure>
          </div>
          <div
            class="col-1 d-flex"
            style="justify-content: center; align-items: center"
          >
            <% if ( currentUser && review.author.equals(currentUser._id)) { %>
            <form
              action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE"
              method="POST"
            >
              <button
                class="btn btn-outline-danger me-2"
                type="submit"
                style="border-radius: 50%; font-weight: 900"
              >
                X
              </button>
            </form>
            <% } else { %>
            <form
              action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE"
              method="POST"
            >
              <button
                disabled
                class="btn btn-outline-danger me-2"
                type="submit"
                style="border-radius: 50%; font-weight: 900"
              >
                X
              </button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <% } %>
</div>

<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const campground = <%- JSON.stringify(camp) %>;
</script>

<script src="/javascripts/mapboxShow.js"></script>
