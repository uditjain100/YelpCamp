<% layout('../layouts/boilerplate') %> <% layout('../layouts/boilerplate') %>
<h2 class="display-2 d-grid col-5 mx-auto" style="text-align: center">
  Update Camp
</h2>
<form
  action="/campgrounds/<%= camp.id %>?_method=PUT"
  method="POST"
  novalidate
  enctype="multipart/form-data"
  class="validated-form"
>
  <div class="row">
    <div class="form-group col-6">
      <label for="title">Campground Name</label>
      <input
        type="text"
        id="title"
        required
        value="<%= camp.title %>"
        class="form-control"
        placeholder="title"
        name="campground[title]"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
    <div class="form-group col-6">
      <label for="price">Price</label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input
          type="text"
          id="price"
          required
          value="<%= camp.price %>"
          placeholder="0.00"
          class="form-control"
          name="campground[price]"
        />
        <div class="valid-feedback">&#10004; Looks Good</div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="city">Campground City</label>
      <input
        type="text"
        id="city"
        required
        value="<%= camp.city %>"
        class="form-control"
        placeholder="city"
        name="campground[city]"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="description">Campground Description</label>
      <input
        type="text"
        id="description"
        class="form-control"
        required
        value="<%= camp.description %>"
        placeholder="description"
        name="campground[description]"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-6">
      <label for="latitude">Campground Latitude</label>
      <input
        type="text"
        id="latitude"
        class="form-control"
        required
        placeholder="latitude"
        value="<%= camp.latitude %>"
        name="campground[latitude]"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
    <div class="form-group col-6">
      <label for="longitude">Campground Longitude</label>
      <input
        type="text"
        id="longitude"
        class="form-control"
        placeholder="longitude"
        value="<%= camp.longitude %>"
        required
        name="campground[longitude]"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="img">Add More Images : </label>
      <input type="file" name="campground[image]" id="" multiple />
    </div>
  </div>
  <% for(var image of camp.images) { %>
  <div class="row my-2">
    <div
      class="col-8"
      style="display: flex; justify-content: center; align-items: center"
    >
      <img src="<%= image.url %>" alt="" style="width: 500px; height: 300px" />
    </div>
    <div
      class="col-4"
      style="display: flex; justify-content: center; align-items: center"
    >
      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          name="flexRadioDefault"
          id="delete"
        />
        <label
          class="form-check-label"
          for="delete"
          style="font-size: large; font-weight: 900"
        >
          Delete
        </label>
      </div>
    </div>
  </div>
  <% } %>
  <div class="d-grid col-4 mx-auto mt-3">
    <button type="submit" class="btn btn-success">Update</button>
  </div>
</form>
<div class="d-grid col-6 mx-auto mt-3">
  <a href="/campgrounds/<%= camp.id %>" class="btn btn-danger">Cancel</a>
</div>
