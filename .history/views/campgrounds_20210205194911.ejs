<% layout('../layouts/boilerplate') %>
<h1 class="display-03">All Campgronds</h1>
<% for(var camp of campgrounds) { %>
<div class="card m-1">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= camp.img %>" alt="" style="width: 100%; height: 200px" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= camp.title %></h4>
        <p class="card-text"><%= camp.description %></p>
        <h6 class="card-location"><%= camp.city %></h6>
        <div class="row m-1">
          <div class="col-3 mx-auto">
            <a href="/campgrounds/<%= camp.id %>" class="btn btn-secondary"
              >Details</a
            >
          </div>
          <form
            class="col-3 mx-auto"
            method="POST"
            action="/campground/<%= camp.id %>?_method=DELETE"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>
