<% layout('../layouts/boilerplate') %>
<h1 class="display-03"><%= camp.title %></h1>
<h4 class="display-08 mx-auto"><%= camp.id %></h4>
<div
  id="item"
  class="bg-info m-2 p-1"
  style="border: 1px violet solid; border-radius: 10%"
>
  <div class="row m-2 bg-primary text-light">
    <div class="col-3"><%= camp.title %></div>
    <div class="col-2"><%= camp.price %></div>
    <div class="col-3"><%= camp.description %></div>
    <div class="col-4"><%= camp.location %></div>
  </div>
  <div
    class="row"
    style="display: flex; justify-content: space-evenly; align-items: center"
  >
    <div
      class="col-5 mx-auto"
      style="display: flex; justify-content: space-evenly; align-items: center"
    >
      <a href="/campgrounds/<%= camp.id %>/update" class="btn btn-secondary"
        >Update</a
      >
    </div>
    <div
      class="col-5 mx-auto"
      style="display: flex; justify-content: space-evenly; align-items: center"
    >
      <div class="btn btn-danger">Delete</div>
    </div>
  </div>
</div>
<div class="row">
  <a href="/campgrounds" class="btn col-5 btn-primary mx-auto">Back to List</a>
</div>
