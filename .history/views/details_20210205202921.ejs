<% layout('../layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card"></div>
    <img src="<%= camp.img %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <a href="/campgrounds/<%= camp.id %>/update"
          style="width: 200px"
          class="btn btn-secondary">Update</a>
        </div>
    </div>
  </div>
</div>

<h1 class="display-03"></h1>
<h2 class="display-06 mx-auto"><%= camp.city %></h2>
<h4 class="display-08 mx-auto"><%= camp.id %></h4>
<p class="description"></p>
<div
  id="item"
  class="bg-info m-2 p-1"
  style="border: 1px violet solid; border-radius: 10%"
>
  <div class="row m-2 text-dark" style="text-align: center">
    <div class="col-6"><%= camp.price %></div>
    <div class="col-6"><%= camp.location %></div>
  </div>
</div>
<div
  class="row"
  style="display: flex; justify-content: space-evenly; align-items: center"
>
  <div
    class="col-5 mx-auto"
    style="display: flex; justify-content: space-evenly; align-items: center"
  >
  </div>
  <div
    class="col-5 mx-auto"
    style="display: flex; justify-content: space-evenly; align-items: center"
  >
    <div class="btn btn-danger" style="width: 200px">Delete</div>
  </div>
</div>
<div class="row my-3">
  <a href="/campgrounds" class="btn col-5 btn-primary mx-auto">Back to List</a>
</div>
