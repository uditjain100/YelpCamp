<% layout('../layouts/boilerplate') %>
<h2 class="display-2 d-grid col-5 mx-auto" style="text-align: center">
  Add Camp
</h2>
<form action="/campgrounds" method="POST">
  <div class="row">
    <div class="form-group col-6">
      <label for="title">Campground Name</label>
      <input
        type="text"
        id="title"
        class="form-control"
        placeholder="title"
        name="title"
      />
    </div>
    <div class="form-group col-6">
      <label for="price">Price</label>
      <input
        type="text"
        id="price"
        placeholder="0.00"
        class="form-control"
        name="price"
      />
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="description">Campground Description</label>
      <input
        type="text"
        id="description"
        class="form-control"
        placeholder="description"
        name="description"
      />
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="img">Image URL</label>
      <input
        type="text"
        id="img"
        class="form-control"
        placeholder="url"
        name="img"
      />
    </div>
  </div>
  <div class="row">
    <div class="form-group col-6">
      <label for="latitude">Campground Latitude</label>
      <input
        type="number"
        id="latitude"
        class="form-control"
        placeholder="latitude"
        name="latitude"
      />
    </div>
    <div class="form-group col-6">
      <label for="longitude">Campground Longitude</label>
      <input
        type="number"
        id="longitude"
        class="form-control"
        placeholder="longitude"
        name="longitude"
      />
    </div>
  </div>
  <div class="d-grid col-4 mx-auto mt-3">
    <button type="submit" class="btn btn-success">Add</button>
  </div>
</form>
<div class="d-grid col-6 mx-auto mt-3">
  <a href="/campgrounds" class="btn btn-danger">Back To List</a>
</div>
