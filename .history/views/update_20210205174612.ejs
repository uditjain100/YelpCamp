<% layout('../layouts/boilerplate') %>
<div class="container">
  <h2 class="display-2 d-grid col-5 mx-auto" style="text-align: center">
    Update Camp
  </h2>
  <form action="/campground/<%= camp.id %>?_method=PATCH" method="POST">
    <div class="row">
      <div class="form-group col-6">
        <label for="title">Campground Name</label>
        <input
          type="text"
          id="title"
          value="<%= camp.title %>"
          class="form-control"
          placeholder="title"
          name="title"
        />
      </div>
      <div class="form-group col-6">
        <label for="price">Price</label>
        <input
          type="number"
          id="price"
          value="<%= camp.price %>"
          placeholder="price"
          class="form-control"
          name="price"
        />
      </div>
    </div>
    <div class="row">
      <div class="form-group col-12">
        <label for="description">Campground Description</label>
        <input
          type="text"
          value="<%= camp.description %>"
          id="description"
          class="form-control"
          placeholder="description"
          name="description"
        />
      </div>
    </div>
    <div class="row">
      <div class="form-group col-6">
        <label for="latitude">Campground Latitude</label>
        <input
          type="number"
          value="<%= camp.latitude %>"
          id="latitude"
          class="form-control"
          placeholder="latitude"
          name="latitude"
        />
      </div>
      <div class="form-group col-6">
        <label for="longitude">Campground Longitude</label>
        <input
          type="number"
          id="longitude"
          value="<%= camp.longitude %>"
          class="form-control"
          placeholder="longitude"
          name="longitude"
        />
      </div>
    </div>
    <div class="d-grid col-4 mx-auto mt-3">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
  <div class="d-grid col-6 mx-auto mt-3">
    <a href="/campgrounds/<%= camp.id %>" class="btn btn-danger">Cancel</a>
  </div>
</div>
