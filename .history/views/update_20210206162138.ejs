<% layout('../layouts/boilerplate') %> <% layout('../layouts/boilerplate') %>
<h2 class="display-2 d-grid col-5 mx-auto" style="text-align: center">
  Update Camp
</h2>
<form
  action="/campground/<%= camp.id %>?_method=PATCH"
  method="POST"
  novalidate
  class="validated-form"
>
  <div class="row">
    <div class="form-group col-6">
      <label for="title">Campground Name</label>
      <input
        type="text"
        id="title"
        required
        value="<%= camp.title %>"
        class="form-control"
        placeholder="title"
        name="title"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
    <div class="form-group col-6">
      <label for="price">Price</label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input
          type="text"
          id="price"
          required
          value="<%= camp.price %>"
          placeholder="0.00"
          class="form-control"
          name="price"
        />
        <div class="valid-feedback">&#10004; Looks Good</div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="city">Campground City</label>
      <input
        type="text"
        id="city"
        required
        value="<%= camp.city %>"
        class="form-control"
        placeholder="city"
        name="city"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="description">Campground Description</label>
      <input
        type="text"
        id="description"
        class="form-control"
        required
        value="<%= camp.description %>"
        placeholder="description"
        name="description"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12">
      <label for="img">Image URL</label>
      <input
        type="text"
        required
        id="img"
        value="<%= camp.img %>"
        class="form-control"
        placeholder="url"
        name="img"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-6">
      <label for="latitude">Campground Latitude</label>
      <input
        type="text"
        id="latitude"
        class="form-control"
        required
        placeholder="latitude"
        value="<%= camp.latitude %>"
        name="latitude"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
    <div class="form-group col-6">
      <label for="longitude">Campground Longitude</label>
      <input
        type="text"
        id="longitude"
        class="form-control"
        placeholder="longitude"
        value="<%= camp.longitude %>"
        required
        name="longitude"
      />
      <div class="valid-feedback">&#10004; Looks Good</div>
    </div>
  </div>
  <div class="d-grid col-4 mx-auto mt-3">
    <button type="submit" class="btn btn-success">Update</button>
  </div>
</form>
<div class="d-grid col-6 mx-auto mt-3">
  <a href="/campgrounds/<%= camp.id %>" class="btn btn-danger">Cancel</a>
</div>
